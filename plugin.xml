<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.btpl.plugins.ni" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>NetworkInternational</name>
    <js-module name="NetworkInternational" src="www/NetworkInternational.js">
        <clobbers target="cordova.plugins"/>
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="NetworkInternational">
                <param name="android-package" value="com.btpl.plugins.ni.NetworkInternational"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/NetworkInternational.java"
                     target-dir="src/com/btpl/plugins/ni/NetworkInternational"/>
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="NetworkInternational">
                <param name="ios-package" value="NetworkInternational"/>
            </feature>
        </config-file>
        <source-file src="src/ios/NetworkInternational.m"/>
    </platform>
</plugin>
